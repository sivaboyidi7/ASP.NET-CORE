@model EmployeeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Employee";
}

<h1>Create Employee</h1>

<h4>Employee</h4>
<hr />
<form enctype="multipart/form-data" asp-action="Create" asp-controller="CRUD" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger">@*Please Provide Name*@</span>
        </div>
        <div class="col-md-9"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="form-group col-md-3">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger">@*Please Provide Email*@</span>
        </div>
        <div class="col-md-6"></div>
    </div>
    <div class="row">
        <div class="form-group col-md-6"></div>
        <div class="form-group col-md-3">
            <label asp-for="Department" class="control-label">Department</label>
            <select asp-for="Department" class="form-control" asp-items="Html.GetEnumSelectList<Departments>()">
                <option value="">Select Department</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
            <div class="col-md-3"></div>
        </div>
    </div>
    <div class="row">
        <div class="custom-file col-md-9"></div>
        <div class="col-md-3">
            <label asp-for="Picture" class="control-label">Image</label>
            <input asp-for="Picture" accept=".png, .jpg, .jpeg" class="form-control custom-file-input" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-4"></div>
        <div class="form-group col-md-4"></div>
        <div class="form-group col-md-4">
            @if (Model == null)
            {
                <input type="submit" value="Create" class="btn btn-primary" />
            }
            else
            {
                <input type="submit" value="Update" asp-action="UpdateEmployee" class="btn btn-primary" />
            }
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllEmployees" asp-controller="CRUD">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
